#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;

$app = new Application('CliLab - GitLab Command Line Tool', '0.1.0');
loadAllCommands($app);
$app->run();

function loadAllCommands(Application $app)
{
  $dirIter = new \GlobIterator(__DIR__ . '/../src/Command/*Command.php');
  foreach ($dirIter as $fileInfo) {
    $commandName = "CliLab\\Command\\{$fileInfo->getBasename('.php')}";
    $app->add(new $commandName);
  }
}
